	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

	/* Guilmira´s snippets */


	{
		"std::cout": 
		{
			"prefix": "cout",
			"body": 
			[
				"std::cout << ${1:⭕OUTPUT⭕} << std::endl;"
			],
			"description": "Print to console"
		},

		"for loop": 
		{
			"prefix": "forloop",
			"body": 
			[
				"for (int i = 0; i < ${1:10}; i++)",
				"{",
					"$2",
				"}"
			],
			"description": "Creates a for loop"
		},

		"forc++": 
		{
			"prefix": "forc++",
			"body": 
			[
				"for ($1 = $2.begin(); it != $2.end() ; it++)",
				"{",
					"$3",
				"}"
			],
			"description": "Creates a for loop for c++ iterators"
		},

		"array": 
		{
			"prefix": "array",
			"body": 
			[
				"${1:array_name}[${2:4}];"
			],
			"description": "Print to console"
		}
	}
