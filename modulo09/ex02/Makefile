NAME		= PmergeMe
ARGS		= 2 9 3 4 10 1000 3677 2000 600 5 8 11
ARGS		= "-5"
ARGS		= 2 9 3 3 3 3 3 1
ARGS		= 239 50 212 50 710 554 814 609 50 506 497 919 727 752 29 142 90 260 318 216 566 204 133 640 109 898 574 872 124 528 51 902 547 961 420 775 705 385 541 947 398 167 883 156 411 73 239 50 212 50 710 554 814 609 50 506 497 919 727 752 29 142 90 260 318 216 566 204 133 640 109 898 574 872 124 528 51 902 547 961 420 775 705 385 541 947 398 167 883 156 411 73 705 385 541 947 398 167 883 156 411 73  156 411 73 1 2 3

#--------------------------------------------------------------------------------------------------------------COMPILER
CXX			= c++
CXXFLAGS	= -Wall -Wextra -Werror
CVERSION	= -std=c++98
CSANITIZE	= -fsanitize=address
#--------------------------------------------------------------------------------------------------------------LIBS
#INCLUDES	= -I ./0includes
#--------------------------------------------------------------------------------------------------------------SOURCES
CLASS		= PmergeMe.cpp
SRCS		= main.cpp $(CLASS)
OBJS		= $(SRCS:.cpp=.o)
#--------------------------------------------------------------------------------------------------------------COMMANDS
REMOVE		= rm -rf
#--------------------------------------------------------------------------------------------------------------RULES
%.o: %.cpp
	$(CXX) $(CXXFLAGS) $(CVERSION) -c $< -o $@

$(NAME): $(OBJS)
	$(CXX) $(CXXFLAGS) $(CVERSION) $(OBJS) -o $(NAME)
	@echo $(GREEN) "$(NAME) compiled" $(NONE)

all: $(NAME)

san: $(OBJS)
	$(CXX) $(CXXFLAGS) $(CSANITIZE) $(OBJS) -o $(NAME)
	@echo $(GREEN) "$(NAME) compiled with santitize" $(NONE)

exe: re
	./$(NAME) $(ARGS)

leaks: re
	./$(NAME) $(ARGS)

clean:
	@$(REMOVE) $(OBJS)

fclean: clean
	@$(REMOVE) $(NAME)

re: fclean all

.PHONY: all clean fclean re
#--------------------------------------------------------------------------------------------------------------FORMAT
NONE='\033[0m'
GREEN='\033[1;32m'